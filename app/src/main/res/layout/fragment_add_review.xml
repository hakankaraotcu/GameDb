<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".AddReviewFragment"
    android:background="#14181C">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/add_review_toolBar"
        android:background="#445566"
        android:layout_alignParentTop="true">

        <Button
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:id="@+id/add_review_cancel"
            android:background="@drawable/ic_cancel"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I Played"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_gravity="center"/>

        <Button
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:id="@+id/add_review_confirm"
            android:background="@drawable/ic_confirm"
            android:layout_gravity="right"
            android:layout_marginEnd="16dp"/>
    </androidx.appcompat.widget.Toolbar>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/add_review_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Game Name"
            android:textColor="@color/white"
            android:textSize="22dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/add_review_image"
            app:layout_constraintBottom_toBottomOf="@+id/add_review_image"
            app:layout_constraintEnd_toStartOf="@+id/add_review_releaseDate"/>

        <TextView
            android:id="@+id/add_review_releaseDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2022"
            android:textColor="#99AABB"
            android:textSize="16dp"
            app:layout_constraintTop_toTopOf="@+id/add_review_image"
            app:layout_constraintBottom_toBottomOf="@+id/add_review_image"
            app:layout_constraintEnd_toStartOf="@id/add_review_releaseDate"/>

        <ImageView
            android:id="@+id/add_review_image"
            android:layout_width="32dp"
            android:layout_height="48dp"
            app:layout_constraintStart_toEndOf="@+id/add_review_releaseDate"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/spiderman"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:background="#2C3440"
            app:layout_constraintTop_toBottomOf="@id/add_review_image"
            app:layout_constraintStart_toStartOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/add_review_date"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="Date"
            android:textColor="#99AABB"
            android:textSize="22dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/add_review_date_description"/>

        <TextView
            android:id="@+id/add_review_date_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="28 March 2023 Tuesday"
            android:textColor="#99AABB"
            android:textSize="22dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintStart_toEndOf="@id/add_review_date"
            app:layout_constraintTop_toTopOf="@id/add_review_date"
            app:layout_constraintBottom_toBottomOf="@id/add_review_date"
            app:layout_constraintEnd_toEndOf="parent"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:background="#2C3440"
            app:layout_constraintTop_toBottomOf="@id/add_review_date_description"
            app:layout_constraintStart_toStartOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RatingBar
            android:id="@+id/add_review_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rating="5"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/add_review_rate"
            android:text="Rate"
            android:textColor="#99AABB"
            android:textSize="16dp"
            app:layout_constraintStart_toStartOf="@id/add_review_rating"
            app:layout_constraintTop_toBottomOf="@id/add_review_rating"/>

        <ImageButton
            android:id="@+id/add_review_like"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:background="@android:color/transparent"
            android:scaleType="fitXY"
            android:src="@drawable/ic_like"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/add_review_rating"
            android:layout_marginEnd="16dp"/>

        <TextView
            android:id="@+id/add_review_like_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Like"
            android:textColor="#99AABB"
            android:textSize="16dp"
            app:layout_constraintTop_toBottomOf="@id/add_review_like"
            app:layout_constraintStart_toStartOf="@id/add_review_like"
            app:layout_constraintEnd_toEndOf="@id/add_review_like"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:background="#2C3440"
            app:layout_constraintTop_toBottomOf="@id/add_review_rate"
            app:layout_constraintStart_toStartOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

        <EditText
            android:id="@+id/add_review_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="16dp"
            android:textColorHint="#99AABB"
            android:backgroundTint="#14181C"
            android:hint="Add review..."
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"/>

</LinearLayout>