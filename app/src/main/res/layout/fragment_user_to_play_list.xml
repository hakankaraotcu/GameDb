<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UserToPlayListFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/user_to_playList_toolBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#445566">

        <Button
            android:id="@+id/user_to_playList_backButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/ic_back" />

        <TextView
            android:id="@+id/user_to_playList_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Username's to-Playlist"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/user_to_playList_filterButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="end"
            android:layout_marginEnd="16dp"
            android:background="@drawable/ic_filter" />

        <Button
            android:id="@+id/user_to_playList_sliderButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="right"
            android:layout_marginEnd="16dp"
            android:background="@drawable/ic_slider" />
    </androidx.appcompat.widget.Toolbar>

    <GridView
        android:id="@+id/user_to_playList_gridView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#14181C"
        android:columnWidth="86dp"
        android:horizontalSpacing="3dp"
        android:numColumns="4"
        android:paddingTop="2dp"
        android:stretchMode="spacingWidthUniform"
        android:verticalSpacing="4dp" />

</LinearLayout>