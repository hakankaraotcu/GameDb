<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#14181C"
    tools:context=".SettingsFragment">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/settings_toolBar"
        android:background="#445566"
        android:layout_alignParentTop="true">

        <Button
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:id="@+id/settings_cancel"
            android:background="@drawable/ic_cancel"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile Settings"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_gravity="center"/>

        <Button
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:id="@+id/settings_confirm"
            android:background="@drawable/ic_confirm"
            android:layout_gravity="right"
            android:layout_marginEnd="16dp"/>
    </androidx.appcompat.widget.Toolbar>

    <EditText
        android:id="@+id/settings_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:hint="Email"
        android:textColor="@color/white"
        android:textColorHint="#99AABB"
        android:backgroundTint="#99AABB"/>

    <EditText
        android:id="@+id/settings_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:hint="Password"
        android:textColor="@color/white"
        android:textColorHint="#99AABB"
        android:backgroundTint="#99AABB"/>

    <EditText
        android:id="@+id/settings_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:hint="Location"
        android:textColor="@color/white"
        android:textColorHint="#99AABB"
        android:backgroundTint="#99AABB"/>

    <EditText
        android:id="@+id/settings_website"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:hint="Website"
        android:textColor="@color/white"
        android:textColorHint="#99AABB"
        android:backgroundTint="#99AABB"/>

    <EditText
        android:id="@+id/settings_bio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:hint="Bio"
        android:textColor="@color/white"
        android:textColorHint="#99AABB"
        android:backgroundTint="#99AABB"/>

    <EditText
        android:id="@+id/settings_avatar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:hint="Avatar"
        android:textColor="@color/white"
        android:textColorHint="#99AABB"
        android:backgroundTint="#99AABB"/>
</LinearLayout>