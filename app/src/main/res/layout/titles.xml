<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <TextView
            android:id="@+id/profile_listTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="List Name"
            android:textColor="#99AABB"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/profile_listTitleCount"/>

        <TextView
            android:id="@+id/profile_listTitleCount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="0"
            android:gravity="end"
            android:textColor="@android:color/darker_gray"
            android:textSize="15dp"
            app:layout_constraintTop_toTopOf="@id/profile_listTitle"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>